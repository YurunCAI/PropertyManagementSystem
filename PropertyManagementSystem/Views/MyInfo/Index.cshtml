
@model IEnumerable<PropertyManagementSystem.Models.w_buildings>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_OwnerDashboard.cshtml";
}

<div class="container-fluid">
    <div class="row cm-fix-height">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">My Information</div>
                <div class="panel-body">
                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                ID
                            </dt>

                            <dd>
                                @Session["id"]
                            </dd>
                            <dt>
                                Name
                            </dt>

                            <dd>
                                @Session["name"]
                            </dd>

                            <dt>
                                Phone
                            </dt>

                            <dd>
                                @Session["phone"]
                            </dd>

                            <dt>
                                Email
                            </dt>

                            <dd>
                                @Session["email"]
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>


            @foreach (var item in Model)
            {
                <div class="row cm-fix-height">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">@Html.DisplayFor(modelItem => item.address)</div>
                            <div class="panel-body">
                                <div>
                                    <dl class="dl-horizontal">
                                        <dt>
                                            Address
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(modelItem => item.address)
                                        </dd>

                                        <dt>
                                            Type
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(modelItem => item.type)
                                        </dd>

                                        <dt>
                                            Building Area
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(modelItem => item.building_area)
                                        </dd>

                                        <dt>
                                            Land Area
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(modelItem => item.land_area)
                                        </dd>

                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>